generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id            Int          @id @default(autoincrement())
  username      String       @unique
  password      String
  email         String       @unique
  role          Role         @default(USER)
  collecections Collection[]
  Item          Item[]
}

model Collection {
  id                Int                @id @default(autoincrement())
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  title             String
  published         Boolean            @default(true)
  authorId          Int
  description       String
  collectionType    CollectionTypeEnum
  stringFieldNames  String[]
  textFieldNames    String[]
  booleanFieldNames String[]
  numberFieldNames  String[]
  dateFieldNames    String[]
  author            User               @relation(fields: [authorId], references: [id])
  items             Item[]
}

model Item {
  id                 Int        @id @default(autoincrement())
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  title              String
  published          Boolean    @default(true)
  stringFieldValues  String[]
  textFieldValues    String[]
  booleanFieldValues Boolean[]
  numberFieldValues  Int[]
  dateFieldValues    DateTime[]
  author             User       @relation(fields: [authorId], references: [id])
  collection         Collection @relation(fields: [collectionId], references: [id])
  authorId           Int
  collectionId       Int
}

model ItemComments {
  id Int @id @default(autoincrement())
}

model Comment {
  id Int @id @default(autoincrement())
}

model ItemTag {
  id Int @id @default(autoincrement())
}

model CollectionTypeExtended {
  id   Int    @id @default(autoincrement())
  name String @unique
}

enum Role {
  USER
  ADMIN
}

enum CollectionTypeEnum {
  COINS
  BOOKS
  SILVER
}
