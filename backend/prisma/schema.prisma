generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id            Int          @id @default(autoincrement())
  username      String       @unique
  password      String
  email         String       @unique
  role          Role         @default(USER)
  collecections Collection[]
  Item          Item[]
  comments Comment[]
}

model Collection {
  id                Int                @id @default(autoincrement())
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  title             String
  published         Boolean            @default(true)
  authorId          Int
  description       String
  collectionType    CollectionTypeEnum
  stringFieldNames  String[]
  textFieldNames    String[]
  booleanFieldNames String[]
  numberFieldNames  String[]
  dateFieldNames    String[]
  author            User               @relation(fields: [authorId], references: [id])
  items             Item[]
}

model Item {
  id                 Int        @id @default(autoincrement())
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  title              String
  published          Boolean    @default(true)
  stringFieldValues  ItemStringValues[]
  textFieldValues    ItemTextValues[]
  booleanFieldValues ItemBooleanValues[]
  numberFieldValues  ItemNumberValues[]
  dateFieldValues    ItemDateValues[]
  author             User       @relation(fields: [authorId], references: [id])
  collection         Collection @relation(fields: [collectionId], references: [id])
  authorId           Int
  collectionId       Int
  tags               ItemTag[]
  comments           Comment[]
}

model ItemStringValues {
    id                 Int        @id @default(autoincrement())
    item             Item       @relation(fields: [itemId], references: [id])
    itemId             Int
    name        String
    value       String
}

model ItemTextValues {
    id                 Int        @id @default(autoincrement())
    item             Item       @relation(fields: [itemId], references: [id])
    itemId             Int
    name        String
    value       String
}

model ItemBooleanValues {
    id                 Int        @id @default(autoincrement())
    item             Item       @relation(fields: [itemId], references: [id])
    itemId             Int
    name        String
    value       Boolean
}

model ItemNumberValues {
    id                 Int        @id @default(autoincrement())
    item             Item       @relation(fields: [itemId], references: [id])
    itemId             Int
    name        String
    value       Int
}

model ItemDateValues {
    id                 Int        @id @default(autoincrement())
    item             Item       @relation(fields: [itemId], references: [id])
    itemId             Int
    name        String
    value       DateTime
}

model Comment {
  id Int @id @default(autoincrement())
  createdAt         DateTime           @default(now())
  item             Item       @relation(fields: [itemId], references: [id])
  itemId             Int
  author             User       @relation(fields: [authorId], references: [id])
  authorId           Int
  text  String
}

model ItemTag {
  id Int @id @default(autoincrement())
  name String @unique
  items Item[]
}




model CollectionTypeExtended {
  id   Int    @id @default(autoincrement())
  name String @unique
}

enum Role {
  USER
  ADMIN
}

enum CollectionTypeEnum {
  COINS
  BOOKS
  SILVER
}
